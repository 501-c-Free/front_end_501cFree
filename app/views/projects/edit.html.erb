<h1>Project edit page</h1>

<%= form_with url: "/projects/#{@project.project_id}", method: :patch, local: true do |f| %>
  <div class="card">
    <div class="card-body">
      <div class="mb-3">
        <%= f.label :name, { class: "form-label"} %>
        <%= f.text_field :name, { class: "form-control", value: "#{@project.project_name}" } %>
      </div>
      <div class="mb-3">
        <%= f.label :description, { class: "form-label"} %>
        <%= f.text_field :description, { class: "form-control", value: "#{@project.description}" } %>
        <%= f.label :add_developer_to_project, { class: "form-label"}%>
  <%= f.select :developer_id, options_for_select(@developers.collect { | developer | [developer.name, developer.id] }), {include_blank: 'Add developer here'}, {} %>
      </div>
      <%= f.submit "Submit", class: "btn btn-success" %>
    </div>
  </div>
<% end %>