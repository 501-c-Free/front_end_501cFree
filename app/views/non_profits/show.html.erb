<main>
  <div class="px-4 py-5 my-5 text-center">
    <!-- <img class="d-block mx-auto mb-4" src="/docs/5.1/assets/brand/bootstrap-logo.svg" alt="" width="72" height="57"> -->
    <h1 class="display-5 fw-bold"><%= "#{@charity_info[:data][:attributes][:non_profit][:non_profit_name]}" %></h1><br>
    <div class="col-lg-6 mx-auto">
      <p class="lead mb-4"><%= "#{@charity_info[:data][:attributes][:non_profit][:mission]}" %></p><br><br>
      <p class="lead mb-4">"<%= "#{@charity_info[:data][:attributes][:non_profit][:tagline]}" %>"</p>
      <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
        <a href="#" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
          <div class="d-flex gap-2 w-100 justify-content-between">
            <div>
              <h6 class="mb-0">Category</h6>
              <p class="mb-0 opacity-75"><%= "#{@charity_info[:data][:attributes][:non_profit][:category]}" %></p>
            </div>
          </div>
        </a>
        <a href="#" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
          <div class="d-flex gap-2 w-100 justify-content-between">
            <div>
              <h6 class="mb-0">Website</h6>
              <p class="mb-0 opacity-75"><%= "#{@charity_info[:data][:attributes][:non_profit][:website_url]}" %></p>
            </div>
          </div>
        </a>
        <a href="#" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
          <div class="d-flex gap-2 w-100 justify-content-between">
            <div>
              <h6 class="mb-0">Address</h6>
              <p class="mb-0 opacity-75"><%= "#{@charity_info[:data][:attributes][:non_profit][:street_address]}" %><br><%= "#{@charity_info[:data][:attributes][:non_profit][:city]}" %>,<%= "#{@charity_info[:data][:attributes][:non_profit][:state]}" %> <%= "#{@charity_info[:data][:attributes][:non_profit][:zipcode]}" %><br><%= "#{@charity_info[:data][:attributes][:non_profit][:country]}" %></p>
            </div>
          </div>
        </a>
        <a href="#" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
          <div class="d-flex gap-2 w-100 justify-content-between">
            <div>
              <h6 class="mb-0">Representative Name</h6>
              <p class="mb-0 opacity-75"><%= "#{@charity_info[:data][:attributes][:non_profit][:representative_name]}" %></p>
            </div>
          </div>
        </a>
        <a href="#" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
          <div class="d-flex gap-2 w-100 justify-content-between">
            <div>
              <h6 class="mb-0">EIN</h6>
              <p class="mb-0 opacity-75"><%= "#{@charity_info[:data][:attributes][:non_profit][:ein]}" %></p>
            </div>
          </div>
        </a>
      </div>
    </div><br>
    <br>
    <% if @charity_info[:data][:attributes][:non_profit][:calendly].nil? %>
      <img src="https://theme.zdassets.com/theme_assets/1024340/78b0cd1ea78d2763fb98cb466ef065903b5efc0b.png"  style="width: 150px; height: 150px; margin: 0px;"><br><br>
      <%= button_to 'Link Calendly Account', calendar_path, method: :get, class: 'btn btn-primary btn-lg' %>
    <% else %>
      <div class="calendly-inline-widget" data-url="https://calendly.com/<%=@charity_info[:data][:attributes][:non_profit][:calendly]%>" style="min-width:320px;height:630px;"></div>
      <script type="text/javascript" src="https://assets.calendly.com/assets/external/widget.js" async></script>
    <% end %>
  </div>
    <div class="px-4 py-1 my-3 text-center">
      <h1 class="display-5 fw-bold">Add your project:</h1><br>
    <div class="col-lg-6 mx-auto">
      <%= render "new_project"%>
    </div>
</div>
</main>
