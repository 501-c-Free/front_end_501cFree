<main>

  <div class="px-4 py-5 my-5 text-center">
    <!-- <img class="d-block mx-auto mb-4" src="/docs/5.1/assets/brand/bootstrap-logo.svg" alt="" width="72" height="57"> -->
    <h1 class="display-5 fw-bold"><%= "#{@charity_info[:non_profit_name]}" %></h1><br>
    <div class="col-lg-6 mx-auto">
      <p class="lead mb-4"><%= "#{@charity_info[:mission]}" %></p><br><br>
      <p class="lead mb-4">"<%= "#{@charity_info[:tagline]}" %>"</p>
      <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
        <a href="#" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
          <div class="d-flex gap-2 w-100 justify-content-between">
            <div>
              <h6 class="mb-0">Category</h6>
              <p class="mb-0 opacity-75"><%= "#{@charity_info[:category]}" %></p>
            </div>
          </div>
        </a>
        <a href="#" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
          <div class="d-flex gap-2 w-100 justify-content-between">
            <div>
              <h6 class="mb-0">Website</h6>
              <p class="mb-0 opacity-75"><%= "#{@charity_info[:website_url]}" %></p>
            </div>
          </div>
        </a>
        <a href="#" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
          <div class="d-flex gap-2 w-100 justify-content-between">
            <div>
              <h6 class="mb-0">Address</h6>
              <p class="mb-0 opacity-75"><%= "#{@charity_info[:street_address]}" %><br><%= "#{@charity_info[:city]}" %>,<%= "#{@charity_info[:state]}" %> <%= "#{@charity_info[:zipcode]}" %><br><%= "#{@charity_info[:country]}" %></p>
            </div>
          </div>
        </a>
        <a href="#" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
          <div class="d-flex gap-2 w-100 justify-content-between">
            <div>
              <h6 class="mb-0">Representative Name</h6>
              <p class="mb-0 opacity-75"><%= "#{@charity_info[:representative_name]}" %></p>
            </div>
          </div>
        </a>
        <a href="#" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
          <div class="d-flex gap-2 w-100 justify-content-between">
            <div>
              <h6 class="mb-0">EIN</h6>
              <p class="mb-0 opacity-75"><%= "#{@charity_info[:ein]}" %></p>
            </div>
          </div>
        </a>
      </div>
    </div>
  </div>
  <div class="b-example-divider"></div>
  <form class="col-lg-6 offset-lg-3">
      <div class="row">
        <h3>Add your Project:</h3>
      </div><br>


  <div class="b-example-divider"></div>
  <form class="col-lg-6 offset-lg-3">
      <div class="row">
        <div class="project_form">
          <%= form_with url: "/projects", method: :post, local: :true do |f| %>
          <%= f.label :"Name of Project" %>
          <%= f.text_field :name %><br>
          <%= f.label :"Description" %>
          <%= f.text_field :description, size: "70x5" %><br>
          <%= f.submit "Submit" %>
        </div>
        <% end %>

</form>
</main>
